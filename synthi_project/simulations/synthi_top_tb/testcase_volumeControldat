#Test midi uart
reset_target 20
set_switches 00 00 00 00

# activate bluetooth control
bt_uart_send_data 01

#--- FILL ARRAY 1--
# Send status 0x9 = Note On
usb_uart_send_data 90 
check_display_hex0 00
check_display_hex1 09
run_simulation_for 00 00 00 60

# Sende Note
usb_uart_send_data 50 
run_simulation_for 00 00 00 60
check_display_hex0 00
check_display_hex1 05
run_simulation_for 00 00 00 ff

# Sende Velocity
usb_uart_send_data 70 
run_simulation_for 00 00 00 60
check_display_hex0 00
check_display_hex1 07
run_simulation_for 00 05 00 00

bt_uart_send_data 6F
run_simulation_for 00 05 00 00
